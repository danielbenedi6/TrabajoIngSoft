<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.artal_benedi.ListaCompra">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".AddProduct" />
        <activity android:name=".ListEdit" />
        <activity android:name=".ProductPad" />
        <activity android:name=".ShoppingListShow" />
        <activity
            android:name=".ShoppingListPad"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProductEdit"
            android:label="@string/title_activity_note_edit"
            android:parentActivityName=".ProductPad">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ShoppingListPad" />
        </activity>
    </application>

</manifest>